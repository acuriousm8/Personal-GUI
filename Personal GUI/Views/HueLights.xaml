<UserControl x:Class="Personal_GUI.Views.HueLights"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Personal_GUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Black">
    <Grid>
        
        
        
        <StackPanel>
            
            <Label x:Name="appkeylabel" Content="test" Foreground="White"/>
            <ListView x:Name="listviewbridges" Foreground="White" Margin="100,10,250,10"/>
            <Button Content="discover bridges" Click="discover_bridges" />
            <Button Content="reigester bridges" Click="register_button" />
            <Button Content="init hue lights" Click="init_hue_button"/>
            <Button Content="Get light count" Click="get_light_count_button"/>
            <ListView x:Name="listviewlights" Foreground="White" Margin="100,10,250,10"/>
            <Button Content="Turn on" Click="Turn_on_button"/>
            <Button Content="Turn off" Click="Turn_off_button"/>
        </StackPanel>
    </Grid>
</UserControl>
